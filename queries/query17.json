[
    {
        "$search": {
            "index" : "keyword_title_fullplot",
            "wildcard": {
                "path": ["title", "fullplot"],
                "query": "!!queryParameter!!"
            },
            "highlight": { "path": ["title","fullplot"] }
        }
    },
    {
      "$limit" : 50
    },
    {
      "$project": {
        "_id" : 0,
        "poster" : 1,
        "year" : 1,
        "imdb.rating" : 1,
        "runtime" : 1,
        "fullplot" : 1,
        "title" : 1,
        "cast" : 1,
        "highlights": {"$meta": "searchHighlights"},
        "score": { "$meta": "searchScore" }
      }
    }
    ]