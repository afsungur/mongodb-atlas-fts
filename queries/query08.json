[
    {
      "$search": {
        "index": "default",
        "phrase": {
          "query": "!!queryParameter!!",
          "path": ["title"],
					"slop" : 1
        }
      }
    },
    {
      "$limit" : 10
    },
    {
      "$project": {
        "_id" : 0,
        "poster" : 1,
        "year" : 1,
        "imdb.rating" : 1,
        "runtime" : 1,
        "fullplot" : 1,
        "title" : 1,
        "cast" :1,
        "score": { "$meta": "searchScore" }
      }
    }
	]